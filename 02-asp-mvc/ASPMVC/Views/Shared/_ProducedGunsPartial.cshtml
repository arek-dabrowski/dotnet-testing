@model ASPMVC.Models.Gun
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<tr>
    <gun-details for-name="Name" for-production="ProductionDate" for-type="Type" for-caliber="Caliber" for-price="Price"></gun-details>
    @if (SignInManager.IsSignedIn(User) && (this.User.IsInRole("Administrator")))
    {
        <td>
            <a asp-controller="Guns" asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
            <a asp-controller="Guns" asp-action="Delete" asp-route-id="@Model.ID">Delete</a>
        </td>
    }
</tr>